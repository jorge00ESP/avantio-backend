{
  "compilerOptions": {

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],

    "rootDir": "./src",
    "outDir": "./dist",

    
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}